<div class="section">

     <!--   Icon Section   -->
     <div class="row">

       <div class="col s12 m8">

           <div class="card-panel">


                <% @posts.each do |post| %>
                <div class="card">
                            <div class="card-image">
                              <%= image_tag "foto7.jpg" %>
                              <h1 class="card-title pink-text"><%=post.title%></h1>
                            </div>
                            <div class="card-content">
                              <p class="gray-text"><%= truncate(post.content, :length => 150) %></p>
                            </div>
                            <div class="card-action">
                              <p class="date"><%= post.created_at.strftime("%A,%b %d")%></p>
                            
                              <%= link_to "Mais", post, class:"waves-effect waves-light pink lighten-4 btn"%>
                            </div>
                          </div>
                <% end %>

                <ul class="pagination">
                            <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                            <li class="active"><a href="#!">1</a></li>
                            <li class="waves-effect"><a href="#!">2</a></li>
                            <li class="waves-effect"><a href="#!">3</a></li>
                            <li class="waves-effect"><a href="#!">4</a></li>
                            <li class="waves-effect"><a href="#!">5</a></li>
                            <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
                          </ul>

              </div>
              </div>
