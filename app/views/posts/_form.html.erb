<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="input-field">
   <%= f.label :title%><br>
   <%= f.text_field :title%> <br>
  </div>
  <br>
  <div class="input-field">
   <%= f.label :content %> <br>
   <%= f.text_area :content, class:'materialize-textarea' %> <br>
  </div>
  <div class="input-field">
    <%= f.select :page, options_for_select(
    [
       ['Looks', 'look'],
       ['Beleza', 'beautiful'],
       ['Lifestyle', 'lifestyle'],
       ['Moda', 'style']
    ]
  ), { :class => 'browser-default' } %>
  </div>
  <div class="input-field">
  <%= f.label :image,'Imagem' %><br><br>
  <%= f.file_field :image%>
  </div>

  <br>
  <%= f.submit 'post', :class => 'pink lighten-4 btn' %>

<% end %>
